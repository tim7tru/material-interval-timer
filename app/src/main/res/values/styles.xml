<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_secondary_accent</item>
        <item name="colorControlHighlight">@color/color_secondary_accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:listDivider">@color/color_gray</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_secondary_dark</item>
    </style>

    <style name="AppBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/color_black</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="AppBarLayoutTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/color_secondary_accent</item>
        <item name="itemIconTint">@color/color_primary_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:indeterminate">false</item>
        <item name="indicatorColor">@color/color_secondary</item>
        <item name="trackColor">@color/color_primary</item>
        <item name="android:progress">0</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="HeaderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/material_text_large</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="TimerEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="boxStrokeColor">@color/color_secondary</item>
        <item name="counterTextColor">@color/color_secondary</item>
        <item name="helperTextTextColor">@color/color_secondary</item>
        <item name="hintTextColor">@color/color_secondary</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="TimerEditTextInput">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TimerTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_secondary_dark</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/color_secondary_dark</item>
        <item name="rippleColor">@color/color_secondary_accent</item>
    </style>

    <style name="TimerOptionsText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/material_text_medium</item>
        <item name="fontFamily">@font/quicksand_light</item>
    </style>

    <style name="TimerSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <style name="TimerIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">@dimen/material_xxsmall</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/color_secondary_accent</item>
        <item name="colorSecondary">@color/color_secondary_accent</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemBackgroundBorderless">
        <item name="android:clickable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/color_secondary_accent</item>
    </style>

    <style name="ContinueFlowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/color_white</item>
        <item name="backgroundTint">@color/color_secondary_dark</item>
        <item name="android:layout_marginEnd">@dimen/material</item>
        <item name="android:layout_marginStart">@dimen/material</item>
        <item name="android:layout_marginBottom">@dimen/material</item>
    </style>

    <style name="TimeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/material_text_xxxlarge</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">@color/color_secondary_accent</item>
    </style>

    <style name="TimerAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded</item>
        <item name="colorSurface">@color/color_primary</item>
    </style>

    <style name="TimerFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/color_white</item>
        <item name="backgroundTint">@color/color_secondary_dark</item>
    </style>

    <style name="TimerRoundProgress" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorDirectionCircular">clockwise</item>
        <item name="indicatorSize">350dp</item>
        <item name="android:indeterminate">false</item>
        <item name="trackThickness">20dp</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="android:max">1000</item>
        <item name="android:progress">1000</item>
        <item name="indicatorColor">@color/color_secondary</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TimerCardTitle">
        <item name="android:textSize">@dimen/material_text_large</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="IntervalCardTitle">
        <item name="android:textSize">@dimen/material_text_medium</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="TimerCardSubtitle">
        <item name="android:textSize">@dimen/material_text</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="TimerCardDescription">
        <item name="android:textSize">@dimen/material_text</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="fontFamily">@font/quicksand_light</item>
    </style>

    <style name="TextButton" parent="@style/SelectableItemBackground">
        <item name="android:textSize">@dimen/material_text_medium</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TimerCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cornerRadius">@dimen/material_small</item>
        <item name="elevation">@dimen/material</item>
        <item name="android:clickable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>